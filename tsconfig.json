{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": ["src", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
